{
  "collectCoverageFrom": [
    "./src/**"
  ],
  "coverageDirectory": "./coverage",
  "coverageReporters": [
    "json",
    "lcov",
    "text"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "lines": 70
    }
  },
  "moduleFileExtensions": [
    "ts",
    "js"
  ],
  "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
  "transform": {
    ".ts": "ts-jest"
  }
}
