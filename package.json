{
  "name": "ts-boilerplate",
  "version": "2.3.0",
  "description": "TypeScript boilerplate for TDD development.",
  "scripts": {
    "build": "tsc --project src/tsconfig.app.json",
    "build:watch": "tsc --project src/tsconfig.app.json --watch",
    "docs": "typedoc src/HelloWorld.ts --tsconfig src/tsconfig.app.json",
    "lint": "eslint ./src",
    "test": "tsc --noEmit -p . && jest --no-cache",
    "test:watch": "tsc --noEmit -p . && jest --no-cache --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metaloha/ts-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "tdd",
    "typescript"
  ],
  "author": "Russel Porosky <russelporosky@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/metaloha/ts-boilerplate/issues"
  },
  "homepage": "https://github.com/metaloha/ts-boilerplate#readme",
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.5",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.1.2",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.23.16",
    "typescript": "^4.8.4"
  },
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
